<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:padding="15dp">

    <TextView
        android:id="@+id/txt_blank1"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/tet_title"
        android:text="意见反馈"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/txt_blank1"/>
    <TextView
        android:id="@+id/txt_blank2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/tet_title"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/txt_blank2"
        android:background="@null"
        android:paddingLeft="20dp"
        android:textSize="19dp"
        android:hint="您还没登录呢！"
        android:textColor="@color/gray"/>
    <EditText
        android:id="@+id/suggestion"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/email"
        android:paddingLeft="20dp"
        android:background="@null"
        android:textSize="19dp"
        android:textColor="@color/gray"
        android:hint="请一定告诉我们您遇到的问题或想反馈的意见哦"/>


    <Button
        android:id="@+id/check"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/suggestion"
        android:layout_centerHorizontal="true"
        android:background="@drawable/check"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/txt_blank2"
        android:layout_alignParentStart="true"
        android:background="?android:attr/listDivider" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/email"
        android:layout_alignParentStart="true"
        android:background="?android:attr/listDivider" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/suggestion"
        android:layout_alignParentStart="true"
        android:background="?android:attr/listDivider" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/check"
        android:layout_alignParentStart="true"
        android:background="?android:attr/listDivider" />

</RelativeLayout>