<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_main_search"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@id/recyclerview_main_notes"
            android:layout_margin="10dp"
            android:text="搜索"
            android:textSize="15sp"
            android:background="@drawable/btn_round"
            android:elevation="3dp"
            android:textColor="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <android.support.v7.widget.RecyclerView
            android:layout_margin="5dp"
            android:paddingTop="60dp"
            android:id="@+id/recyclerview_main_notes"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <android.support.design.widget.FloatingActionButton
                android:layout_marginStart="15dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/float_main_user"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <android.support.design.widget.FloatingActionButton
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/float_main_note"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <android.support.design.widget.FloatingActionButton
                android:layout_marginStart="50dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/float_main_clipboard"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>