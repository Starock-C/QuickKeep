<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="10dp"
    android:elevation="3dp"
    android:background="@drawable/linearlayout_round">

    <TextView
        android:textSize="20dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/colorBlack"
        android:id="@+id/textview_main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="10dp"
            android:textColor="@color/colorHeavyGray"
            android:layout_marginBottom="5dp"
            android:id="@+id/textview_main_time"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="10dp"
            android:textColor="@color/colorHeavyGray"
            android:id="@+id/textview_main_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorBlack"
        android:layout_width="70dp"
        android:layout_height="5px"/>

    <TextView
        android:textSize="15dp"
        android:id="@+id/textview_main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="10" />
</LinearLayout>